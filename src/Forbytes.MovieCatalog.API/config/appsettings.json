{
  "MovieCatalogDatabaseSettings": {
    "ConnectionString": "mongodb+srv://zerouser:zeropassword@clusterzero.pysp4.mongodb.net/movie_catalog?retryWrites=true&w=majority",
    "DatabaseName": "movie_catalog"
  },

  "AllowedHosts": "*",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "NLog": {
      "IncludeScopes": true,
      "ShutdownOnDispose": true
    }
  },

  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "internalLogLevel": "Off",
    "internalLogFile": "C:\\Forbytes.MovieCatalog.API-nlog-internal.txt",
    "internalLogToConsole": false,

    "variables": {
      "var_logdir": "${basedir}\\Logs"
    },

    "default-wrapper": {
      "type": "AsyncWrapper",
      "overflowAction": "Discard"
    },

    "targets": {
      "all-file-json": {
        "type": "File",
        "fileName": "${var_logdir}\\Forbytes.MovieCatalog.API-${shortdate}.log",
        "keepFileOpen": true,
        "openFileCacheTimeout": 60,
        "layout": {
          "type": "JsonLayout",
          "escapeForwardSlash": false,
          "Attributes": [
            {
              "name": "time",
              "layout": "${date:format=o}"
            },
            {
              "name": "level",
              "layout": "${level}"
            },
            {
              "name": "logger",
              "layout": "${logger}"
            },
            {
              "name": "message",
              "layout": "${message:raw=true}",
              "escapeUnicode": false
            },
            {
              "name": "exception",
              "layout": "${onexception:${exception:format=@}}"
            },
            {
              "name": "properties",
              "encode": false,
              "layout": {
                "type": "JsonLayout",
                "includeallproperties": "true"
              }
            }
          ]
        }
      }
    },

    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "all-file-json"
      }
    ]
  }
}